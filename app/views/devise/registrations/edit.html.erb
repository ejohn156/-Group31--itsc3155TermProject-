<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    Username:
    <%= f.text_field :username, placeholder: "Username"  %>
  </div>
  
  <div class="field">
    First Name:
    <%= f.text_field :firstname, placeholder: "First Name"  %>
  </div>
  
  <div class="field">
    Last Name:
    <%= f.text_field :lastname, placeholder: "Last Name"  %>
  </div>

  <div class="field">
    Email:
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@uncc.edu" %>
  </div>

  <div class="field">
    Height:
    <%= f.text_field :height_feet %> ft
    <%= f.text_field :height_inches  %> in
  </div>
  
  <div class="field">
    Weight:
    <%= f.text_field :weight  %> lbs
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    New Password:
    <%= f.password_field :password, autocomplete: "off", placeholder: "******" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum (leave blank if you don't want to change it)</em>
    <% end %> 
  </div>

  <div class="field">
    Confirm Password:
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "******" %>
  </div>

  <div class="field">
    Password:
    <%= f.password_field :current_password, autocomplete: "off", placeholder: "******" %><br />
    <i>(we need your current password to confirm your changes)</i>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "HOME", root_path %>
